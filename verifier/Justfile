set fallback

import '../tools/lib/utils.justfile'

# Default: show available recipes
default:
    just --list

mock: ensure-mockery
    @echo "Cleaning existing mocks..."
    find . -path "*/mocks/*.go" -delete 2>/dev/null || true
    @echo "Generating mocks with mockery..."
    mockery

# Format all go files
fmt: ensure-golangci-lint
    golangci-lint fmt

# Run golangci-lint
lint: ensure-golangci-lint
    golangci-lint run --output.text.path stdout --fix

mod-tidy: ensure-go
    go mod tidy

mod-download: ensure-go
    go mod download

test: ensure-go
    go test -v ./...

test-coverage:
    go test -v -coverprofile=coverage.out ./...

build:
    docker build -f Dockerfile -t verifier:latest .

build-dev:
    docker build -f Dockerfile.dev -t verifier:dev ..

clean:
    docker rmi verifier:latest

clean-dev:
    docker rmi verifier:dev
